<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="e.android.dwiratna_1202150258.Activity_Pemesanan">


    <TextView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:fontFamily="casual"
        android:text="Flower Cafe"
        android:textSize="50dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="114dp"
        android:layout_marginStart="114dp"
        android:layout_marginTop="19dp"
        android:text="Pilih Menu:"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/order">

        <RadioButton
            android:id="@+id/dineIn"
            android:layout_width="173dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="180dp"
            android:layout_marginStart="114dp"
            android:layout_marginTop="20dp"
            android:text="dine In"
            android:textSize="19dp"
            android:textStyle="bold"
            android:onClick="checkButton"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/takeAway"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="145dp"
            android:layout_marginStart="114dp"
            android:layout_marginTop="20dp"
            android:text="take away"
            android:textSize="19dp"
            android:textStyle="bold"
            android:onClick="checkButton"/>

    </RadioGroup>


    <Button
        android:id="@+id/btn_order"
        android:layout_width="153dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="119dp"
        android:layout_marginStart="119dp"
        android:layout_marginTop="21dp"
        android:text="Pesan sekarang"
        android:onClick="pesanSekarang"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="211dp"
        android:layout_height="255dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_order"
        app:srcCompat="@drawable/flower"
        tools:layout_editor_absoluteX="0dp" />




</android.support.constraint.ConstraintLayout>
